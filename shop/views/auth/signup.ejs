<%- include('../includes/head.ejs') %>
   <link rel="stylesheet" href="/css/product.css">
   <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>

   <main>
      <% if (error) { %>
         <div class="um um--error"><%= error %> </div>
         <%}%>
      <form class="login-form" action="/auth/signup" method="POST" novaliate>
         <div class="form-control">
            <label for="email">Email</label>
            <input 
            class="<%= validationErrors.find(e=> e.param === 'email') ? 'invalid': '' %>"
            type="email" 
            name="email" 
            id="email" 
            value="<%= oldInput.email%>"> 
         </div>
         <div class="form-control">
            <label for="password">Password</label>
            <input 
            class="<%= validationErrors.find(e=> e.param === 'password') ? 'invalid': '' %>"
            type="password" 
            name="password" 
            id="password" 
            value="<%= oldInput.password%>">
         </div>
         <div class="form-control">
            <label for="password">Confirm Password</label>
            <input 
            class="<%= validationErrors.find(e=> e.param === 'confpassword') ? 'invalid': '' %>"
            type="password" 
            name="confpassword" 
            id="confpassword" 
            value="<%= oldInput.conf%>">
         </div>
         <input type="hidden" name="_csrf" value="<%= csrf %>">
      <button class="btn" type="submit">Signup</button>
      </form>
   </main>
<%- include('../includes/end.ejs') %>