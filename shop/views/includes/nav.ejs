<div class="backdrop"></div>
<header class="main-header">
   <button id="side-menu-toggle">Menu</button>
   <nav class="main-header__nav">
      <ul class="main-header__item-list">
         <li class="main-header__item">
            <a class="<%= path === '/shop' ? 'active' : '' %>" href="/shop">Shop</a></li>
         <li class="main-header__item">
            <a class="<%= path === '/shop/products' ? 'active' : '' %>" href="/shop/products">Products</a></li>
            <% if (isAuth) { %>
         <li class="main-header__item">
            <a class="<%= path === '/shop/cart' ? 'active' : '' %>" href="/shop/cart">Cart</a></li>
         <li class="main-header__item">
            <a class="<%= path === '/shop/orders' ? 'active' : '' %>" href="/shop/orders">Orders</a></li>
         <li class="main-header__item">
            <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a></li>
         <li class="main-header__item">
            <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products</a>
         </li>
          <% } %>   
         <ul class="main-header__item-list">
            <% if (!isAuth) { %>
            <li class="main-header__item">
               <a class="<%= path === 'auth/login' ? 'active' : '' %>" href="/auth/login">Login</a> 
            </li>
            <li class="main-header__item">
               <a class="<%= path === 'auth/signup' ? 'active' : '' %>" href="/auth/signup">Sign Up</a> 
            <% } else { %> 
            <li class="main-header__item">
               <form action="/logout" method="post">
                  <input type="hidden" name="_csrf" value="<%= csrf %>">
                  <button type="submit">Logout</button>
               </form>
            </li>
            <% } %> 
         </ul>
      </ul> 
   </nav>
</header>

